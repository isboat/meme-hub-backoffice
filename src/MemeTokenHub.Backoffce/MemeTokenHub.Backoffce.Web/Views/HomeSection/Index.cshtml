@model Meme.Domain.Models.MemePageModel

<h4>@Model.Name - Home page Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="HomeSection.Title" class="control-label"></label>
                <input name="Title" asp-for="HomeSection.Title" class="form-control" />
                <span asp-validation-for="HomeSection.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeSection.ImgUrl" class="control-label"></label>
                <input name="ImgUrl" asp-for="HomeSection.ImgUrl" class="form-control" />
                <span asp-validation-for="HomeSection.ImgUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HomeSection.Description" class="control-label"></label>
                <input name="Description" asp-for="HomeSection.Description" class="form-control" />
                <span asp-validation-for="HomeSection.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
